{% render 'header-mobile-toggle', menu: menu, mobile_secondary_menu: mobile_secondary_menu, show_language_switcher: show_language_switcher, show_currency_switcher: show_currency_switcher %}
{% render 'header-full-menu', menu: menu %}
{% if logo %}
	<a class="logolink" href="{{ routes.root_url }}">
		<img
			src="{{ logo | image_url }}"
			class="logoimg"
			alt="{{ logo.alt | default: shop.name | escape }}"
			width="{{ logo.width }}"
			height="{{ logo.height }}"
		>
	</a>
{% else %}
	<a class="logolink text-logo" href="{{ routes.root_url }}">
		{{ shop.name }}
	</a>
{% endif %}
{% render 'header-secondary-area' %}
